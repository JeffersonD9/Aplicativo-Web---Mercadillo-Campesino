<!-- Modal Actualizar Campesino -->
<div class="modal fade" id="actualizarModal" tabindex="-1" role="dialog" aria-labelledby="actualizarModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="alert alert-danger d-none" role="alert" id="notificacionActualizar"></div>

        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="actualizarModalLabel">Editar Campesino</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="formActualizarCampesino">
                    <input type="hidden" id="idActualizar">
                    
                    <!-- Campo Nombres con botón individual -->
                    <div class="form-group">
                        <label for="nombresActualizar">Nombres</label>
                        <div class="input-group">
                            <input type="text" class="form-control" id="nombresActualizar" maxlength="50" required>
                            <div class="input-group-append">
                                <button class="btn btn-outline-primary btn-actualizar-campo" data-campo="Nombres">
                                    <i class="bi bi-check"></i> Actualizar
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Campo Apellidos con botón individual -->
                    <div class="form-group">
                        <label for="apellidosActualizar">Apellidos</label>
                        <div class="input-group">
                            <input type="text" class="form-control" id="apellidosActualizar" maxlength="50" required>
                            <div class="input-group-append">
                                <button class="btn btn-outline-primary btn-actualizar-campo" data-campo="Apellidos">
                                    <i class="bi bi-check"></i> Actualizar
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Campo Email con botón individual -->
                    <div class="form-group">
                        <label for="emailActualizar">Email</label>
                        <div class="input-group">
                            <input type="email" class="form-control" id="emailActualizar" maxlength="100" required>
                            <div class="input-group-append">
                                <button class="btn btn-outline-primary btn-actualizar-campo" data-campo="Email">
                                    <i class="bi bi-check"></i> Actualizar
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Campo Celular con botón individual -->
                    <div class="form-group">
                        <label for="celularActualizar">Celular</label>
                        <div class="input-group">
                            <input type="text" class="form-control" id="celularActualizar" maxlength="10" required>
                            <div class="input-group-append">
                                <button class="btn btn-outline-primary btn-actualizar-campo" data-campo="Celular">
                                    <i class="bi bi-check"></i> Actualizar
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Campo Mercadillo con botón individual -->
                    <div class="form-group">
                        <label for="mercadilloActualizar">Mercadillo</label>
                        <div class="input-group">
                            <select class="form-control" id="mercadilloActualizar" required>
                                <option value="">Seleccione un mercadillo</option>
                                <!-- Las opciones se llenarán con JavaScript -->
                            </select>
                            <div class="input-group-append">
                                <button class="btn btn-outline-primary btn-actualizar-campo" data-campo="Id_Mercadillo">
                                    <i class="bi bi-check"></i> Actualizar
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Campo Puesto con botón individual -->
                    <div class="form-group">
                        <label for="puestoActualizar">Puesto</label>
                        <div class="input-group">
                            <input id="puestoActualizar" class="form-control" type="number" min="1" required>
                            <div class="input-group-append">
                                <button class="btn btn-outline-primary btn-actualizar-campo" data-campo="Puesto">
                                    <i class="bi bi-check"></i> Actualizar
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Campo Contraseña con botón individual -->
                    <div class="form-group">
                        <label for="passwordActualizar">Nueva Contraseña</label>
                        <div class="input-group">
                            <input type="password" class="form-control" id="passwordActualizar" placeholder="Dejar vacío para no cambiar">
                            <div class="input-group-append">
                                <button class="btn btn-outline-primary btn-actualizar-campo" data-campo="Password">
                                    <i class="bi bi-check"></i> Actualizar
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>